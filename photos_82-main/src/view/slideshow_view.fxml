<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.view.SlideShowController"
      spacing="10" alignment="CENTER">
      
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Main image display -->
    <ImageView fx:id="slideshowImage" fitWidth="400" fitHeight="300" preserveRatio="true"/>
    <Label fx:id="label"/>

    <!-- Navigation buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Previous" onAction="#previous"/>
        <Button text="Next" onAction="#next"/>
        <Button text="Close" onAction="#close"/>
    </HBox>
</VBox>
